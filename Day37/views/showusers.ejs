<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Information</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <h2>All Users Information</h2>
    <table>
        <a href="http://localhost:8000/user/add">
        <button class="newuser" >Add New User</button></a><br>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% for(user of users){ %>
                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.email%>
                    </td>
                    <td>
                        <form method="get" action="/user/<%= user.id %>/edit">
                            <button>Edit Username</button>
                        </form>
                    </td>
                    <td>
                        <form method="get" action="/user/<%= user.id %>/delete">
                            <button type="submit">Delete User</button>
                        </form>
                    </td>
                </tr>
                <% } %>

        </tbody>
    </table>
</body>

</html>